@model SuccessiveCart.Models.Dto.LoginVM
@{
}


<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="px-5 ms-xl-4">
                    <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>

                    <span class="h1 fw-bold mb-0">SuccessiveCart</span>
                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form style="width: 23rem;" method="post" asp-controller="Verification" asp-action="Login">

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

                        <div class="form-outline mb-4">
                            <input type="email" id="form2Example18" class="form-control form-control-lg " asp-for="UserEmail" />
                            <label class="form-label" for="form2Example18">Username</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input type="password" id="form2Example28" class="form-control form-control-lg" asp-for="Password" />
                            <label class="form-label" for="form2Example28">Password</label>
                        </div>
                        
                        <div class=" form-check">
                            <label class="form-check-label">
                                <input asp-for="RememberMe" class="form-check-input" checked /> @Html.DisplayNameFor(a => a.RememberMe);
                            </label>

                        </div>
                     

                        <div class="pt-1 mb-4">
                            <input type="submit" class="btn btn-dark" />
                        </div>

                        @*                         <p class="small mb-5 pb-lg-2"><a class="text-muted" href="#!">Forgot password?</a></p>
                        *@                        <p>Don't have an account? <a class="link-info" asp-area="" asp-controller="Verification" asp-action="Register">Register here</a></p>
                        @* <a class=" nav-link text-dark" asp-area="" asp-controller="SignUp" asp-action="SignUp">SignUp</a>
                        *@
                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://images.unsplash.com/photo-1483985988355-763728e1935b?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                     alt="Login image" class="w-100 vh-65">
            </div>
        </div>
    </div>
</section>
