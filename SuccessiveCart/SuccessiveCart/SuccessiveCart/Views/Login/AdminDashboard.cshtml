    <script>
        document.getElementById("IsAvailableButton").addEventListener("click", function () {
            var button = document.getElementById("IsAvailableButton");
            if (button.classList.contains("btn-success")) {
                button.classList.remove("btn-success");
                button.classList.add("btn-custom");
                button.textContent = "Available Products";
            } else {
                button.classList.remove("btn-custom");
                button.classList.add("btn-success");
                button.textContent = "All Products";
            }

            if (button.textContent === "All Products") {
                button.classList.remove("btn-custom");
                button.classList.add("btn-danger-custom");
            } else {
                button.classList.remove("btn-danger-custom");
            }
        });
    </script>
