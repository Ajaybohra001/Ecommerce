                                            <button class="btn btn-primary favorite-btn" onclick="toggleFavorite(this)" data-product-id="@product.ProductId">❤<i class="fa-regular fa-heart"></i></button>


                                        </form>
                                    }
                                }
                                    else
                                    {
                                        <form asp-controller="Verification" asp-action="Login"  method="post">

                                            <button class="btn btn-primary favorite-btn" onclick="toggleFavorite(this)" data-product-id="@product.ProductId">❤<i class="fa-regular fa-heart"></i></button>


                                        </form>
                                    }
                                    @if (sign.IsSignedIn(User))
                                    {@if(User.IsInRole("User"))
                                    {
                                        <form asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.ProductId" method="post">
                                            <button type="submit" class="btn btn-success">🛒</button>
                                        </form>
                                    }
                                    }
                                    else
                                    {
                                        <form asp-controller="Verification" asp-action="Login" method="post">
                                            <button type="submit" class="btn btn-success">🛒</button>
                                        </form>
                                    }
                                </div>



                            </div>
                        </div>
                    }
                }
            </div>
        </div>


        <div class="heading-center">
            <h1>All Products</h1>
        </div>

        <div class="product-row">
            @foreach (var product in Model)
            {


                <div class="product-card" data-category="@product.CateogryId" data-price="@product.ProductPrice">
                    <img class="product-image" src="/image/@product.ProductPhoto" alt="Product 1">
                    <div class="product-details">
                        <h3 class="product-name">@product.ProductName</h3>
                        <p class="product-price">Rs. @product.ProductPrice</p>
                        <div class="product-actions">
                            @if (sign.IsSignedIn(User))
                            {
                            @if (User.IsInRole("User")){
                                <form asp-controller="Favourite" asp-action="AddToFavourite" asp-route-id="@product.ProductId" method="post">

                                    <button class="btn btn-primary favorite-btn" onclick="toggleFavorite(this)" data-product-id="@product.ProductId">❤<i class="fa-regular fa-heart"></i></button>


                                </form>
                            }
                            }
                            else
                            {
                                <form asp-controller="Verification" asp-action="Login" method="post">

                                    <button class="btn btn-primary favorite-btn" onclick="toggleFavorite(this)" data-product-id="@product.ProductId">❤<i class="fa-regular fa-heart"></i></button>


                                </form>
                            }
                            @if (sign.IsSignedIn(User))
                        {@if (User.IsInRole("User")){
                                <form asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.ProductId" method="post">
                                    <button type="submit" class="btn btn-success">🛒</button>
                                </form>
                        }
                            }
                            else
                            {
                                <form asp-controller="Verification" asp-action="Login" method="post">
                                    <button type="submit" class="btn btn-success">🛒</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

    
    @* else
    {
        <script>
            window.location.href = '/Login/AdminDashboard';
        </script>


        
    } *@
    


</body>
</html>


