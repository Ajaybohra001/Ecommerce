@model List<SuccessiveCart.Models.Domain.Products>
@using Microsoft.AspNetCore.Identity
@using SuccessiveCart.Models.Domain
@inject SignInManager<Users> sign
@inject UserManager<Users> userManager



@{
    var ProductList = ViewBag.ProductList as List<SuccessiveCart.Models.Domain.Products>;
    ViewData["Title"] = "User Dashboard";
    
    var CategoryList = ViewBag.CategoryList as List<SuccessiveCart.Models.Domain.Cateogry>;

}





<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>

    <style>
        .filter-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .filter-section > div {
                flex: 1;
                margin-right: 10px;
            }

            .filter-section select,
            .filter-section input[type="number"],
            .filter-section input[type="text"] {
                width: 100%;
                margin-bottom: 10px;
                padding: 8px;
                border-radius: 5px;
                border: 1px solid #ccc;
                box-sizing: border-box;
            }

        .product-row {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }

        .product-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            width: calc(25% - 20px);
            margin: 10px;
            box-sizing: border-box;
        }

            .product-card:hover {
                box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
                transform: translateY(-5px);
            }

        .product-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px 10px 0 0;
        }

        .product-details {
            padding: 15px;
            text-align: center;
        }

        .product-name {
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .product-price {
            font-size: 14px;
            color: crimson;
            margin-bottom: 10px;
        }

        .product-actions {
            display: flex;
            justify-content: space-around;
            margin-top: 10px;
        }

        /* Adjust button styles */
        .favorite-btn,
        .add-to-cart-btn {
            padding: 8px 20px;
            border-radius: 5px;
        }

            .favorite-btn:hover,
            .add-to-cart-btn:hover {
                background: #0056b3;
            }

        .heading-center {
            text-align: center;
            margin-bottom: 20px;
        }

    </style>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
     
        function filterProducts() {
            var categoryFilter = document.getElementById("categoryFilter").value;
            var minPrice = parseFloat(document.getElementById("minPrice").value);
            var maxPrice = parseFloat(document.getElementById("maxPrice").value);

            $(".product-card").each(function () {
                var productCategory = $(this).data("category");
                var productPrice = parseFloat($(this).data("price"));
                var isTrending = $(this).hasClass("trending-product");

                var showProduct = ((!categoryFilter || productCategory == categoryFilter) &&
                    (!minPrice || productPrice >= minPrice) &&
                    (!maxPrice || productPrice <= maxPrice)) &&
                    (!isTrending);

                $(this).toggle(showProduct);
            });

            if (categoryFilter.trim() === "" && isNaN(minPrice) && isNaN(maxPrice)) {
                $(".trending-products").show();
            } else {
                $(".trending-products").hide();
            }
        }
        function searchProducts() {
            var searchText = $("#searchInput").val().toLowerCase();
            var selectedCategory = $("#categoryFilter").val();

            $(".product-card").each(function () {
                var productName = $(this).find(".product-name").text().toLowerCase();
                var productCategory = $(this).data("category").toString();
                var isTrending = $(this).hasClass("trending-product");

                var matchSearch = productName.includes(searchText);
                var matchCategory = selectedCategory === "" || productCategory === selectedCategory;

                var showProduct = matchSearch && matchCategory && (!isTrending);

                $(this).toggle(showProduct);
            });

            if (searchText.trim() === "") {
                $(".trending-products").show();
            } else {
                $(".trending-products").hide();
            }
        }



   

    
    </script>
</head>
<body>
    @* @if (User.IsInRole("User"))
    { *@

        <div class="filter-section">
            <div>
                <label for="categoryFilter">Category:</label>
                <select id="categoryFilter" onchange="filterProducts()">
                    <option value="">All Categories</option>
                    @foreach (var category in CategoryList)
                    {
                        <option value="@category.CateogryId">@category.CateogryName</option>
                    }
                </select>
            </div>
            <div>
                <label for="searchInput">Search:</label>
                <input type="text" id="searchInput" placeholder="Enter keywords" oninput="searchProducts()">
            </div>
            <div>
                <label for="minPrice">Price Range:</label>
                <input type="number" id="minPrice" placeholder="Min Price" onchange="filterProducts()">
                <input type="number" id="maxPrice" placeholder="Max Price" onchange="filterProducts()">
            </div>
        </div>
        <div class="trending-products">
            <div class="heading-center">
                <h1>Trending Products</h1>
                <hr />
            </div>

            <div class="product-row">
                @foreach (var product in Model)
                {
                    if (product.IsTrending)
                    {
                        <div class="product-card" data-category="@product.CateogryId" data-price="@product.ProductPrice">
