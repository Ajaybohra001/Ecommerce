@model SuccessiveCart.Models.Domain.Products
<h1> Edit Product</h1>
<form method="post" action="ViewProduct">
    <div class="mb-3">
        <label for="" class="form-label">Product Id</label>
        <input type="text" class="form-control" asp-for="ProductId" readonly>

    </div>
    <div class="mb-3">
        <label for="" class="form-label">Cateogry Id</label>
        <input type="number" class="form-control" asp-for="CateogryId" >

    </div>
    <div class="mb-3">
        <label for="" class="form-label">Product Name</label>
        <input type="text" class="form-control" asp-for="ProductName">

    </div>

    <div class="mb-3">
        <label for="" class="form-label">Product Photo</label>
        <input type="file" class="form-control" asp-for="ProductPhoto">

    </div>
    <div class="mb-3">
        <label for="" class="form-label">Product Price</label>
        <input type="number" class="form-control" asp-for="ProductPrice">

    </div>
    <div class="mb-3">
        <label for="" class="form-label">Product Description</label>
        <input type="text" class="form-control" asp-for="ProductDescription">

    </div>
    <div class="mb-3">
        <label for="" class="form-label">Product Create Date</label>
        <input type="datetime" class="form-control" asp-for="ProductCreatedDate">

    </div>
    <div class="mb-3">
        <label for="" class="form-label">Available </label>
        <input type="text" class="form-control" asp-for="IsAvailable">

    </div>
    <div class="mb-3">
        <label for="" class="form-label">Trending </label>
        <input type="text" class="form-control" asp-for="IsTrending">

    </div>




    <button type="submit" class="btn btn-primary" asp-action="ViewProduct" asp-controller="Admin">Submit</button>

    <button type="submit" class="btn btn-danger" asp-action="DeleteProduct" asp-controller="Admin">Delete</button>
</form>