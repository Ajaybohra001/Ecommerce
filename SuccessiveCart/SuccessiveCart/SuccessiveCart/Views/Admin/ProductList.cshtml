@model List<SuccessiveCart.Models.Domain.Products>

<h1>Products</h1>
<div>


    <a class="nav-item nav-link active" asp-area="" asp-controller="Admin" asp-action="AddProduct"><i class="fa fa-tachometer-alt me-2"></i>Add Product</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Description</th>
            <th>Date</th>
            <th>Available</th>
            <th>Trending</th>
            <th>  </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.ProductPhoto</td>
                <td>@product.ProductDescription</td>
                <td>@product.ProductCreatedDate</td>
                <td>@product.IsAvailable</td>
                <td>@product.IsTrending</td>


                @* <td><a href="/Admin/ViewProduct/@product.ProductId">View</a></td> *@
            </tr>

        }
    </tbody>
</table>