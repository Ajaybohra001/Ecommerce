@model SuccessiveCart.Models.Domain.Products

@{
    var categoryList = ViewBag.CateogryList as List<SuccessiveCart.Models.Domain.Cateogry>;
  
}





   

<form method="post" asp-action="AddProducts" asp-controller="Admin" class="mt-5" enctype="multipart/form-data">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Add Product</h2>
                         <div class="mb-3">
                            <label for="CateogryId" class="form-label">Select Category</label>
                            <select asp-for="CateogryId" class="form-select form-select-sm">
                                   @if (categoryList != null)
                                       {
                                       foreach (var x in categoryList)
                                           {
                                           <option value="@x.CateogryId">@x.CateogryName</option>
                                           }
                                       }
                            </select>
                            <span asp-validation-for="CateogryId" class="text-danger"></span>
                        </div> 
                       
                        <div class="mb-3">
                            <label for="ProductName" class="form-label">Product Name</label>
                            <input type="text" class="form-control" asp-for="ProductName" id="ProductName">
                        </div>
                        <div class="mb-3">
                            <label for="ProductPrice" class="form-label">Product Price</label>
                            <input type="number" class="form-control" asp-for="ProductPrice" id="ProductPrice">
                        </div>
                        <div class="mb-3">
                            <label for="ProductPhoto" class="form-label">Product Photo</label>
                            <input type="file" class="form-control" asp-for="ProductPhoto" id="ProductPhoto">
                        </div>
                        <div class="mb-3">
                            <label for="ProductDescription" class="form-label">Product Description</label>
                            <textarea class="form-control" asp-for="ProductDescription" id="ProductDescription" rows="3"></textarea>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="availableCheckbox" asp-for="IsAvailable">
                            <label class="form-check-label" for="availableCheckbox">Available</label>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="trendingCheckbox" asp-for="IsTrending">
                            <label class="form-check-label" for="trendingCheckbox">Trending</label>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

